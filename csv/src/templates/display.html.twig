{% set num_columns = csv_content[0]|length %}
<div style="overflow-x: auto;">
<table class="table table-responsive" id="{{ id_prefix }}csv-table">
	<thead>
		<tr>
			{% set headers = csv_content[0]|keys %}
			{% for header in headers %}
				<th style="width: calc(100% / {{ num_columns }});">{{ header }}</th>
			{% endfor %}
		</tr>
	</thead>
	<tbody id="{{ id_prefix }}csv-tbody">
		{% for row in csv_content %}
			<tr>
				{% for cell in row %}
					<td>{{ cell }}</td>
				{% endfor %}
			</tr>
		{% endfor %}
	</tbody>
</table>
</div>
	<nav aria-label="Page navigation">
		<ul class="pagination justify-content-center" id="{{ id_prefix }}pagination" style="cursor: pointer;"></ul>
	</nav>
<hr class="border border-primary border-2 opacity-10">
